<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="petshop-persistence">
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/petshop" />
      <property name="javax.persistence.jdbc.user" value="root" />
      <property name="javax.persistence.jdbc.password" value="betacom" />
	  <property name="javax.persistence.schema-generation.database.action" value="update"/>
	  <property name="javax.persistence.schema-generation.create-source" value="metadata"/>
	  <property name="dialect" value="org.hibernate.dialcet.MySQL5Dialect"/>
    </properties>
  </persistence-unit>
</persistence>
